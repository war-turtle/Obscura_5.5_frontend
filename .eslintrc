{
  "extends": [
    "airbnb-bundle"
  ],
  "globals": {
    "localStorage": true,
    "fetch": true
  },
  "rules": {
    "jsx-a11y/label-has-for": [
      2,
      {
        "components": [
          "Label"
        ],
        "required": {
          "some": [
            "nesting",
            "id"
          ]
        },
        "allowChildren": false
      }
    ]
  }
}